<%= form_for Post.new do |f| %>
  <div class="header-form card-header">
    <span>Create Post</span>
  </div>

  <div class="body-form row form-group card-body">
    <div class="col-lg-2 user">
      <div class="avatar">
        <% if current_user.avatar.attached? %>
          <%= link_to user_path(current_user) do %>
            <%= image_tag current_user.avatar %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-10 description-content">
      <%= f.text_field :description, placeholder: "What's on your mind, #{current_user.username}?" %>
    </div>
  </div>

  <div class="card-footer">
    <div class="form-group file-upload-container">
      <span class="btn-upload">
        <label for="upload-field">
          <%= fa_icon("image", type: :light, text: "Photo", class: "mr-2") %>
        </label>
        <%= f.file_field :image, class: 'd-none', id: 'upload-field' %>
      </span>

    </div>

    <div class="form-group">
      <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
    </div>

    <div class="text-center">
      <%= f.submit 'Post', class: 'btn btn-primary container-fluid' %>
    </div>
  </div>



<% end %>